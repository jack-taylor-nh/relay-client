{
  "manifest_version": 3,
  "name": "Relay",
  "version": "0.1.0",
  "description": "Your private communications perimeter",
  "permissions": [
    "storage",
    "sidePanel",
    "alarms",
    "offscreen"
  ],
  "host_permissions": [],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Relay",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "side_panel": {
    "default_path": "panel/index.html"
  }
}
